generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id             Int      @id @default(autoincrement())
  imagem         String   
  endereco       String   
  bairro         String   
  cidade         String   
  tipo           String   
  tipoNegocio    String   
  categoria      String   
  metragem       Int      
  areaConstruida Int?     
  quartos        Int      
  suites         Int?     
  banheiros      Int
  vagas          Int      
  preco          Float    
  infoExtra      String?  
  descricao      String?   
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model User {
  id         Int      @id @default(autoincrement())
  nome       String
  telefone   String
  email      String   @unique
  senha      String
  cidade     String
  avatarUrl  String?  // <- novo campo para imagem de perfil
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

